<PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto">

    <de.marmaro.krt.ffupdater.settings.LongSummaryPreferenceCategory
        app:summary="Settings when the user interface is visible."
        app:title="Foreground">

        <SwitchPreferenceCompat
            app:defaultValue="true"
            app:key="foreground__update_check__metered"
            app:singleLineTitle="false"
            app:summary="Allow update checks on metered networks such as mobile data."
            app:title="Update checks on metered networks" />

        <SwitchPreferenceCompat
            app:defaultValue="true"
            app:dependency="foreground__update_check__metered"
            app:key="foreground__download__metered"
            app:singleLineTitle="false"
            app:summary="Useful for users with limited mobile data."
            app:title="Download updates on metered networks" />

        <ListPreference
            app:defaultValue="@string/default_theme_preference"
            app:entries="@array/foreground__theme_preference__entries"
            app:entryValues="@array/foreground__theme_preference__values"
            app:key="foreground__theme_preference"
            app:singleLineTitle="false"
            app:summary="@string/settings__theme_preference_summary"
            app:title="@string/settings__theme_preference_title" />

    </de.marmaro.krt.ffupdater.settings.LongSummaryPreferenceCategory>


    <de.marmaro.krt.ffupdater.settings.LongSummaryPreferenceCategory
        app:summary="Settings when the app is working in the background and is invisible to the user."
        app:title="Background">

        <SwitchPreferenceCompat
            app:defaultValue="true"
            app:key="background__update_check__enabled"
            app:singleLineTitle="false"
            app:summary="Check for new updates at regular intervals."
            app:title="Update check" />

        <ListPreference
            app:defaultValue="360"
            app:dependency="background__update_check__enabled"
            app:entries="@array/background__update_check__interval__entries"
            app:entryValues="@array/background__update_check__interval__values"
            app:key="background__update_check__interval"
            app:singleLineTitle="false"
            app:title="Update check interval"
            app:useSimpleSummaryProvider="true" />

        <MultiSelectListPreference
            app:dependency="background__update_check__enabled"
            app:entries="@array/background__update_check__excluded_apps__entries"
            app:entryValues="@array/background__update_check__excluded_apps__values"
            app:key="background__update_check__excluded_apps"
            app:summary="Useful if you don't want to update an app and don't want to receive update notifications for it."
            app:singleLineTitle="false"
            app:title="Exclude apps from update check" />

        <SwitchPreferenceCompat
            app:defaultValue="true"
            app:dependency="background__update_check__enabled"
            app:key="background__update_check__metered"
            app:singleLineTitle="false"
            app:title="Update checks on metered networks" />

        <SwitchPreferenceCompat
            app:defaultValue="true"
            app:dependency="background__update_check__enabled"
            app:key="background__download__enabled"
            app:singleLineTitle="false"
            app:summary="When an update is detected, download it. This will later speed up the update process."
            app:title="Download app updates" />

        <SwitchPreferenceCompat
            app:defaultValue="false"
            app:dependency="background__download__enabled"
            app:key="background__download__metered"
            app:singleLineTitle="false"
            app:title="Download app updates on metered networks"
            app:summary="Not recommended for users with limited mobile data."/>

        <SwitchPreferenceCompat
            app:defaultValue="false"
            app:dependency="background__download__enabled"
            app:key="background__installation__enabled"
            app:singleLineTitle="false"
            app:title="Install update"
            app:enabled="false"
            app:summary="{Not yet implemented!} Try to install the update."/>


    </de.marmaro.krt.ffupdater.settings.LongSummaryPreferenceCategory>

</PreferenceScreen>
